  <% end %>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div data-longitude="<%= f.object.longitude.present? ? f.object.longitude : '31.23571160000006' %>" data-latitude="<%= f.object.latitude.present? ? f.object.latitude : '30.0444196' %>" id="event_location" style="width: 400px; height: 300px;"></div>
